<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net481</TargetFramework>
    <AssemblyName>SecureLibrary.SQL</AssemblyName>
    <RootNamespace>SecureLibrary.SQL</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CLSCompliant>true</CLSCompliant>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Simple-Crypt4PB.snk</AssemblyOriginatorKeyFile>
    <DelaySign>true</DelaySign>
    
    <!-- Assembly Information -->
    <AssemblyTitle>simple-.NET-Crypting-For-PowerBuilder-SQL</AssemblyTitle>
    <AssemblyDescription>.NET library for SQL Server CLR providing AES-GCM encryption, Bcrypt password hashing, and ECDH key exchange functionality for PowerBuilder applications</AssemblyDescription>
    <AssemblyCompany>김유석(Yu Seok Kim)</AssemblyCompany>
    <AssemblyProduct>simple-.NET-Crypting-For-PowerBuilder</AssemblyProduct>
    <AssemblyCopyright>Copyright © 2025 김유석(Yu Seok Kim)</AssemblyCopyright>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
    <PackageReference Include="System.Buffers" Version="4.6.1" />
    <PackageReference Include="System.Memory" Version="4.6.3" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.6.1" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.1.2" />
    <PackageReference Include="Microsoft.SqlServer.Server" Version="1.0.0" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="9.0.7" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="AssemblyInfo.cs" />
    <Compile Include="Legacy\draft.cs" />
    <Compile Include="Legacy\invokeCGN.cs" />
    <Compile Include="Legacy\SqlTypeMapping.cs" />
    
    <Compile Include="SharedTypes.cs" />
    <!-- New refactored components -->
    <Compile Include="Interfaces\ICgnService.cs" />
    <Compile Include="Interfaces\IEncryptionEngine.cs" />
    <Compile Include="Interfaces\ISqlXmlConverter.cs" />
    <Compile Include="Interfaces\IPasswordHashingService.cs" />
    <Compile Include="ProtectedMemoryHelper.cs" />
    <Compile Include="Services\CgnService.cs" />
    <Compile Include="Services\SqlXmlConverter.cs" />
    <Compile Include="Services\EncryptionEngine.cs" />
    <Compile Include="Services\BcryptPasswordHashingService.cs" />
    <!-- SQL Server CLR Functions and Procedures -->
    <Compile Include="SqlCLRFunctions.cs" />
    <Compile Include="SqlCLRProcedures.cs" />
  </ItemGroup>
</Project>